
@{
    ViewBag.Title = "New";
}

<div id="containershow">
    <nav>
        <a class="navlink" href="/Course/List">Back to Courses</a>
    </nav>
    <h2>New Course</h2>
    <form method="POST" action="/Course/Create" name="AddCourse">
        <div class="inputrow">
            <label for="ClassCode">Class Code:</label>
            <input type="text" id="ClassCode" name="ClassCode" />

        </div>
        <div class="inputrow">
            <label for="TeacherId">Teacher ID: </label>
            <input type="text" id="TeacherId" name="TeacherId" />

        </div>
        <div class="inputrow">
            <label for="StartDate">Start Date:</label>
            <input type="text" id="StartDate" name="StartDate" />
        </div>
        <div class="inputrow">
            <label for="FinishDate">Finish Date:</label>
            <input type="text" id="FinishDate" name="FinishDate" />

        </div>
        <div class="inputrow">
            <label for="ClassName">Class Name:</label>
            <div>
                <input id="ClassName" name="ClassName"></input>
            </div>
        </div>
        <div class="inputrow">
            <input type="submit" value="Create Course" />
        </div>
    </form>
    <script>
        var courseHandle = document.forms.AddCourse;

        courseHandle.onsubmit = processCourse;
        function processCourse() {
            var ccInput = courseHandle.ClassCode;
            if (ccInput.value === "") {
                ccInput.style.background = 'red';
                ccInput.focus();
                return false;
            }
            var tdInput = courseHandle.TeacherId;
            if (tdInput.value === "") {
                tdInput.style.background = 'red';
                tdInput.focus();
                return false;
            }
            var sdInput = courseHandle.StartDate;
            if (sdInput.value === "") {
                sdInput.style.background = 'red';
                sdInput.focus();
                return false;
            }
            var fdInput = courseHandle.FinishDate;
            if (fdInput.value === "") {
                fdInput.style.background = 'red';
                fdInput.focus();
                return false;
            }
            var cnInput = courseHandle.ClassName;
            if (cnInput.value === "") {
                cnInput.style.background = 'red';
                cnInput.focus();
                return false;
            }
        }
    </script>
</div>

